{
  "name": "tuboshu",
  "version": "2.0.1",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder"
  },
  "author": "rubyzhu",
  "license": "ISC",
  "description": "tuboshu",
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "lokijs": "^1.5.12"
  },
  "build": {
    "files": [
      "**/*",
      "!gui/setting/*"
    ],
    "appId": "com.shaziai.shaziai",
    "productName": "ShaziAI",
    "npmRebuild": false,
    "mac": {
      "category": "my.category.type"
    },
    "win": {
      "target": "NSIS",
      "icon": "icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "icons"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico"
    }
  }
}
