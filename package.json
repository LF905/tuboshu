{
  "name": "tuboshu",
  "version": "v1.0.2",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder"
  },
  "author": {
    "name": "deepshit2025",
    "email": "lyf200@qq.com"
  },
  "license": "ISC",
  "description": "tuboshu",
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "lokijs": "^1.5.12"
  },
  "build": {
    "appId": "com.tuboshu.tuboshu",
    "productName": "Tuboshu",
    "npmRebuild": false,
    "files": [
      "**/*",
      "!.github/**/*",
      "!.git/**/*",
      "!.idea/**/*",
      "!gui/setting/**/*",
      "!dist/*",
      "!node_modules/**/{.cache,.bin,test}"
    ],
    "asar": true,
    "compression": "maximum",
    "npmArgs": ["--production"],
    "mac": {
      "category": "my.category.type",
      "target": "dmg",
      "icon": "build/mac_icon.icns",
      "identity": null
    },
    "win": {
      "target": "NSIS",
      "icon": "build/win_icon.ico"
    },
    "linux": {
      "category": "utility",
      "target": ["AppImage", "deb"],
      "icon": "build/linux_icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico"
    }
  }
}
